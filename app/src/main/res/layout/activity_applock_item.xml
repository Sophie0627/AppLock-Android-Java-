<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout         
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
	    android:background="@drawable/app_list_bg"
	    android:orientation="horizontal" >
	    
        <LinearLayout 
        android:id="@+id/ll_tranistion_click"    
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
	    android:background="@drawable/tranistion_drawable"
	    android:orientation="horizontal" >
	    
    <ImageView
        android:id="@+id/app_icon_iv"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="3dip"
        android:layout_marginLeft="10dip"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:gravity="center_vertical"
        android:layout_marginTop="18dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_name_tv"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:text="AndroidListViewWit"
            android:singleLine="true"
            android:textColor="@color/Color_Menu_Thumb_Font"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/app_package_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:textColor="@color/Color_Secondary_Font"
            android:textSize="11.0sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center_vertical|end"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="10dip"       
        android:orientation="horizontal" >
    
     <CheckBox
           android:id="@+id/btn_Lock_UnLock_Thumb"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"           
           android:button="@drawable/btn_thumb_lock"/>
    
     <CheckBox
           android:id="@+id/btn_Lock_UnLock_Msg"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:button="@drawable/btn_msg_lock"
           android:layout_marginLeft="5dip"
           android:layout_marginRight="5dip" />
    
    <CheckBox
           android:id="@+id/btn_Lock_UnLock_App"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:button="@drawable/btn_lock_app"/>
    
    </LinearLayout>
    
    </LinearLayout>
    
    </LinearLayout>

</LinearLayout>