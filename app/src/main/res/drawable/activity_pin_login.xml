<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="4"
    android:id="@+id/ll_background"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_fingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="30dp"
        android:background="@drawable/selector_fingerprint_cirlce"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fingerprint" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_centerInParent="true"
                android:src="@drawable/login_key_icon"/>


            <ImageView
                android:id="@+id/ib_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/lock_dropdown_icon"
                android:layout_marginRight="50dp"
                android:visibility="invisible"/>

        </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:layout_marginTop="@dimen/loginPin_textViewMargin">

    <TextView
        android:id="@+id/txt_wrong_password_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"

        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dip"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="10dip"
        android:visibility="invisible"
        android:textSize="11sp"
        android:textStyle="normal"
        android:typeface="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lblnewpass"
        android:text="This is textview"
        android:textColor="@color/ColorWhite"
        android:textSize="15sp"
        android:gravity="center"/>

</LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:maxLength="6"
                android:id="@+id/txtPassword"
                android:inputType="numberPassword"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/underline_edittext"
                android:textColor="@color/ColorWhite"
                android:textAlignment="center"
                android:textSize="30sp"
                android:imeOptions="actionDone" />

            <CheckBox
                android:id="@+id/cb_show_password_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ColorWhite"
                android:button="@drawable/btn_pin_checkbox"
                android:focusable="false"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/txtPassword"
                android:layout_marginLeft="@dimen/checkbox_margin_left"
                android:checked="false" />

        </RelativeLayout>


    </LinearLayout>

    <GridLayout
        android:columnCount="3"
        android:rowCount="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="1"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button1"
            android:onClick="btn1Click" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:text="2"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button2"
            android:onClick="btn2Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40sp"
            android:text="3"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button3"
            android:onClick="btn3Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="4"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button4"
            android:onClick="btn4Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:text="5"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button5"
            android:onClick="btn5Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button6"
            android:onClick="btn6Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="7"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button7"
            android:onClick="btn7Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:text="8"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button8"
            android:onClick="btn8Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:text="9"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button9"
            android:onClick="btn1Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="C"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/buttonClear"
            android:onClick="btnClearClick"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:text="0"
            android:textSize="30sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/button0"
            android:onClick="btn0Click"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:text="OK"
            android:textSize="27sp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/selector_pin_login_button"
            android:id="@+id/buttonDone"
            android:onClick="btnGoClick"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtforgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/lblforgotpassword"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="3dip"
            android:textColor="@color/ColorWhite"
            android:textSize="14sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_weight="1" />

</LinearLayout>