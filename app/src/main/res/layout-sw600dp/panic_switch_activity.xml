  <ScrollView 
        android:layout_width="fill_parent" 
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center" >
    
	<LinearLayout
	      android:layout_width="match_parent"        
	      android:layout_height="wrap_content"	      
	      android:orientation="vertical" >
            
	    <LinearLayout
	      android:layout_width="wrap_content"        
	      android:layout_height="wrap_content"
	      android:orientation="vertical" >
        
      <TextView
		  android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dip"
          android:layout_marginLeft="15dip"
          android:layout_marginRight="10dip"
          android:layout_marginBottom="10dip"
          android:focusable="true"
          android:textSize="17sp"
          android:textColor="@color/text_primary_dark" />
 
      </LinearLayout>
      
 
			   <LinearLayout
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:layout_marginTop="15dp"
			     android:orientation="vertical" >
			             
				   <LinearLayout
					   android:layout_width="match_parent"
				       android:layout_height="wrap_content"
				       android:layout_marginTop="5dp"
				       android:layout_weight="1"
				       android:orientation="horizontal" >
				       
				        <TextView
							android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="15dp"
				            android:layout_marginTop="4dp"
				            android:text="lblFlick"
				            android:textAppearance="?android:attr/textAppearanceMedium"
				            android:textSize="20sp"
				            android:textColor="@color/text_primary_dark" />
				        
					          <LinearLayout
					              android:layout_width="match_parent"
					              android:layout_height="wrap_content"
					              android:gravity="right"
					              android:orientation="horizontal" >
												              
					              <ToggleButton
						            android:id="@+id/togglebtnFlick"
						            android:layout_width="50dp"
						            android:layout_height="35dp"
						            android:layout_gravity="right"
						            android:layout_marginRight="15dp"
						            android:gravity="right"
						            android:textOff=""
						            android:textOn="" />
					
					        </LinearLayout>   
				
				  </LinearLayout>  
			  
				   <LinearLayout
					   android:layout_width="match_parent"
				       android:layout_height="wrap_content"
				       android:layout_marginTop="10dp"
				       android:layout_weight="1"
				       android:orientation="horizontal" >
				       
				        <TextView
							android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="15dp"
				            android:layout_marginTop="4dp"
				            android:text="lblShake"
				            android:textSize="20sp"
				            android:textAppearance="?android:attr/textAppearanceMedium"
				            android:textColor="@color/text_primary_dark" />
				        
					          <LinearLayout
					              android:layout_width="match_parent"
					              android:layout_height="wrap_content"
					              android:gravity="right"
					              android:orientation="horizontal" >
					
					       			 <ToggleButton
							            android:id="@+id/togglebtnShake"
							            android:layout_width="50dp"
						            	android:layout_height="35dp"
							            android:layout_gravity="right"
							            android:layout_marginRight="15dp"
							            android:gravity="right"
							            android:textOff=""
							            android:textOn="" />
					
					        </LinearLayout>   
				
				  </LinearLayout>
			  
				   <LinearLayout
					   android:layout_width="match_parent"
				       android:layout_height="wrap_content"
				       android:layout_marginTop="5dip"
				       android:layout_weight="1"
				       android:orientation="horizontal" >
				       
				        <TextView
							android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="15dp"
				            android:layout_marginTop="4dp"
				            android:textSize="20sp"
				            android:text="lblPalmOnScreen"
				            android:textAppearance="?android:attr/textAppearanceMedium"
				            android:textColor="@color/text_primary_dark" />
				        
					          <LinearLayout
					              android:layout_width="match_parent"
					              android:layout_height="wrap_content"
					              android:gravity="right"
					              android:orientation="horizontal" >
					
					   				<ToggleButton
							            android:id="@+id/togglebtnPalmOnScreen"
							            android:layout_width="50dp"
						            	android:layout_height="35dp"
							            android:layout_gravity="right"
							            android:layout_marginRight="15dp"
							            android:gravity="right"
							            android:textOff=""
							            android:textOn="" />
					
					        </LinearLayout>   
				
				  </LinearLayout>
			  
			 </LinearLayout>  
			 
			 <LinearLayout
				     android:layout_width="match_parent"
				     android:layout_height="wrap_content"
				     android:layout_marginTop="10dp"
				     android:orientation="vertical" >

			   <TextView
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_marginLeft="15dp"
			       android:textSize="20sp"
			       android:text="lblSwitchApp"
			       android:textAppearance="?android:attr/textAppearanceMedium"
			       android:textColor="@color/text_primary_dark"
			        />
             
   			</LinearLayout>
   
		  <RadioGroup
		        android:id="@+id/radioChooseSwitchApp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="14dp" 
		        android:layout_marginBottom="14dp" 
		        android:layout_marginLeft="25dp"
		        android:layout_marginStart="25dp">
		 
		        <RadioButton
		            android:id="@+id/Browser"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:text="string/lbl_Browser"
		            android:paddingLeft="40dp"
		            android:visibility="gone"
		            android:textSize="17sp"
		            android:textColor="@color/text_primary_dark"
		            android:checked="false" />
		 
		        <RadioButton
		            android:id="@+id/HomeScreen"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:textSize="17sp"
		            android:paddingLeft="25dp"
		            android:checked="true"
		            android:textColor="@color/Color_Secondary_Font"
		            android:text="string/lbl_HomeScreen" />
		 
		    </RadioGroup>  
			           
      </LinearLayout> 
    
  </ScrollView>
  
</LinearLayout>
